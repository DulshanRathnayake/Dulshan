woman = cv2.imread('woman.jpg',0)

_, thresh = cv2.threshold(woman,0,255,cv2.THRESH_BINARY+cv2.THRESH_OTSU)
print("Otsu Threshold:", _)

foreground = cv2.bitwise_and(woman, woman, mask=thresh)
eq_foreground = hist_equalization(foreground)

plt.figure(figsize=(10,5))
plt.subplot(1,2,1)
plt.imshow(thresh,cmap='gray')
plt.title("Binary Mask")

plt.subplot(1,2,2)
plt.imshow(eq_foreground,cmap='gray')
plt.title("Equalized Foreground")
plt.show()
